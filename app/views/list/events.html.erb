<% content_for :title, @title %>

<% content_for :hero do %>
	<% if @hero_image %>
		<section class="article-hero">
			<%= render :partial => "section/hero", :locals => { :hero_image => "whatshappening_hero.jpg", :hero_text => nil, :hero_link => nil, :hero_alt => "What's happening?" } %>
		</section>
	<% end %>
<% end %>

  <div>
    <div class="article-main">
      <article class="article-body">
        <% unless @publication.nil? %>
          <%= @publication.content.html_safe %>
        <% end %>
<% if @featured.length > 0 %>
	<h2>Featured</h2>

	<ul class="grid effect-2 listing" id="grid2">
		<% @featured.each do |artefact| %>
			<%= render :partial => "list/block", :locals => { :artefact => artefact } %>
		<% end %>
	</ul>

	<h2>All Events</h2>
<% end %>

<ul class="grid effect-2 listing" id="grid2">
	<% @artefacts.each do |artefact| %>
		<%= render :partial => "list/block", :locals => { :artefact => artefact } %>
	<% end %>
</ul>
      </article>
    </div>
    <% unless @publication.nil? %>
      <aside class="article-sidebar listing">
        <%= render 'content/related' %>
      </aside>
    <% end %>
  </div>

<%= render :partial => "list/background_check" %>
