<div class="module module-light module-highlight-1 module-colour-<%= (publication.slug.length % 12) + 1 %> module-event <%= "module-image-fullbleed" if publication.details.module_image %>">
	<a href="<%= event_path(publication) %>" target="_top">
		<%= render :partial => "module/module_image", :locals => { publication: publication } %>
		<div class="text">
			<h1 class="module-heading"><%= publication.title %><br /><span class="date"><%= Date.parse(publication.details.start_date).strftime("%A %d %B %Y") %><br/>at <%= DateTime.parse(publication.details.start_date).strftime("%l:%M%p") %></span></h1>
			<p class="category"><%= event_type(publication).gsub('-', ' ') %></p>
            <p class="location"><%= publication.details.location %></p>
		</div>
	</a>
    <%= link_to "Register", publication.details.booking_url, :class => "booking_url"%>
</div>
